@model libraryMVC.Models.CreateEmanetlerViewModel

<h2 class="text-primary">Yeni Emanet Oluştur</h2>
<hr>
<div class="jumbotron mt-5">
    <div class="row ml-4">
        <div class="col-4">
            <form asp-action="CreateEmanetler" id="createEmanetForm">
                <div id="errors" asp-validation-summary="All" class="text-danger"></div>
                <div class="mb-3">
                    <label for="uyeNo" class="form-label">Üye</label>
                    <select asp-for="@Model.Emanet.UyeNo" class="form-control">
                        <option selected>Üye Seçiniz</option>
                        @foreach (var uye in Model.Uyeler)
                        {
                            <option value="@uye.UyeNo">@uye.UyeAd @uye.UyeSoyad</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="KitapNo" class="form-label">Kitap</label>
                    <select asp-for="@Model.Emanet.KitapNo" class="form-control">
                        <option selected>Kitap Seçiniz</option>
                        @foreach (var kitap in Model.Kitaplar)
                        {
                            <option value="@kitap.KitapNo">@kitap.KitapAd</option>
                        }
                    </select>
                </div>
                <div class="mb-3">
                    <label for="EmanetVerme" class="form-label">Emanet Verme Tarihi</label>
                    <input asp-for="@Model.Emanet.EmanetVermeTarih" type="date" class="form-control" id="EmanetVerme"
                        aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="EmanetAlma" class="form-label">Emanet Geri Alma Tarihi</label>
                    <input asp-for="@Model.Emanet.EmanetGeriAlmaTarih" type="date" class="form-control" id="EmanetAlma"
                        aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="EmanetIslem" class="form-label">Emanet İşlem Tarihi</label>
                    <input disabled asp-for="@Model.Emanet.EmanetIslemTarih" type="date" class="form-control"
                        id="EmanetIslem" aria-describedby="emailHelp">
                </div>
                <div class="mb-3">
                    <label for="EmanetNot" class="form-label">Emanet Not</label>
                    <input asp-for="@Model.Emanet.EmanetNot" type="text" class="form-control" id="EmanetNot"
                        aria-describedby="emailHelp" maxlength="30">
                </div>
                <div class="mb-3">
                    <label for="EmanetTeslim" class="form-label">Emanet Teslim Edildi</label>
                    @*<input required title="^ karakerini kullanmayın." asp-for="@Model.Emanet.EmanetTeslimEdildi"
                        type="text"
                        class="form-control" id="EmanetTeslim" aria-describedby="emailHelp">*@
                    <select class="form-control" asp-for="@Model.Emanet.EmanetTeslimEdildi" id="EmanetTeslim"
                        aria-label="Floating label select example">
                        <option selected value="">Lütfen Birini seçiniz.</option>
                        <option value="Teslim Edilmedi">Teslim Edilmedi</option>
                        <option value="Teslim Edildi">Teslim Edildi</option>
                        <option value="Sürüyor">Sürüyor</option>
                    </select>
                </div>

                <button type="submit" class="btn btn-primary">Oluştur</button>
            </form>
        </div>
    </div>
</div>
<a style="margin-bottom:100px;" asp-action="Emanetler" class="btn btn-outline-secondary btn-sm mx-2">Listeye Geri
    Dön</a>

@section Scripts{
<script>
    $(document).ready(function () {
        $("#createEmanetForm").submit(function () {
            let data = $("#createEmanetForm").serializeArray();
            $.ajax({
                url: "/Emanet/CreateEmanetler",
                method: "POST",
                data: data,
                success: function () {
                    showSuccessAlert("Ekleme Başarılı!\nEmanetler'e yönlendiriliyorsunuz");
                    setTimeout(() => {
                        window.location.href = "/Emanet/Emanetler";
                    }, 2500)
                },
                error: function (error) {
                    let errorObject = JSON.parse(error.responseText)
                    let html = "";
                    for (let i = 0; i < errorObject.length; i++) {
                        if (errorObject[i].value === "") {
                            continue;
                        }
                        html += `
                        <div>${errorObject[i].key} : ${errorObject[i].value}</div>
                        `
                    }
                    $("#errors").empty().append(html);
                    showErrorAlert("Ekleme Başarısız!");
                }
            })
            return false;
        })
    })
</script>
<script src="../../wwwroot/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="../../wwwroot/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
