@model libraryMVC.Models.RegisterViewModel

<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
        <div class="col-lg-6 text-center text-lg-start">
            <h1 class="display-4 fw-bold lh-1 mb-3">Kütüphane Otomasyonuna Hoş Geldiniz</h1>
            <p class="col-lg-12 fs-4">Hemen kayıt olun ve tek tıkla kitabı kiralayın, teslim noktalarından teslim edin.
            </p>
        </div>
        <div class="col-md-10 mx-auto col-lg-6">
            <form asp-action="KayitOl" asp-controller="Hesap" class="p-4 p-md-5 border rounded-3 bg-light">
                <div class="@ViewBag.Class">@ViewBag.Message</div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.LabelFor(x=>x.UyeAd)
                            @Html.TextBoxFor(x=>x.UyeAd,new{@class="form-control",placeholder="Adınız"})
                            <span class="text-danger" asp-validation-for="UyeAd"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.LabelFor(x=>x.UyeSoyad)
                            @Html.TextBoxFor(x=>x.UyeSoyad,new{@class="form-control",placeholder="Soyadınız"})
                            <span class="text-danger" asp-validation-for="UyeSoyad"></span>
                        </div>
                    </div>
                </div>
                <div class="form-floating mb-3">
                    @Html.LabelFor(x=>x.Email)
                    @Html.TextBoxFor(x=>x.Email,new{@class="form-control",placeholder="Eposta Adresiniz"})
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
                <div class="form-floating mb-3">
                    @Html.LabelFor(x=>x.UyeTelefon)
                    @Html.TextBoxFor(x=>x.UyeTelefon,new{@class="form-control",placeholder="(555) 555-5555"})
                    <span class="text-danger" asp-validation-for="UyeTelefon"></span>
                </div>
                <div class="form-floating mb-3">
                    @Html.LabelFor(x=>x.UyeAdres)
                    @Html.TextAreaFor(x=>x.UyeAdres,new{@class="form-control",style="min-height:100px;max-height:200px;",placeholder="Adresiniz"})
                    <span class="text-danger" asp-validation-for="UyeAdres"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.LabelFor(x=>x.Sifre)
                            @Html.PasswordFor(x=>x.Sifre,new{@class="form-control",placeholder="Şifreniz"})
                            <span class="text-danger" asp-validation-for="Sifre"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-floating mb-3">
                            @Html.LabelFor(x=>x.SifreTekrar)
                            @Html.PasswordFor(x=>x.SifreTekrar,new{@class="form-control",placeholder="Şifre Tekrarı"})
                            <span class="text-danger" asp-validation-for="SifreTekrar"></span>
                        </div>
                    </div>
                </div>
                <button class="w-100 btn btn-lg btn-primary mb-2" type="submit">Kayıt Ol</button>
                Zaten bir hesabınız var mı? Giriş yapmak için&nbsp;<a style="text-decoration: none;" asp-action="GirisYap">tıklayınız.</a>
                <hr class="my-4">
                <small class="text-muted">Kayıt olduğunuzda, kullanım haklarını kabul etmiş olursunuz.</small>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}